{
    "name": "natzar/stripe-pad",
    "description": "A Micro SaaS boilerplate to launch fast with Stripe",
    "type": "project",
    "require": {
        "ext-curl": "*",
        "stripe/stripe-php": "^7.67",
        "phpmailer/phpmailer": "^6.5"
    },
    "require-dev": {
        "phplint/phplint": "^0.0.1",
        "wp-coding-standards/wpcs": "^3.1",
        "phpstan/phpstan": "^1.10",        
        "phpunit/phpunit": "^9"
    },
    "license": "GPL-3.0-or-later", 
    "authors": [
        {
            "name": "Beto Ayesa",
            "email": "beto@ayesadigital.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "build-tailwind": "php -r \"exec('npx update-browserslist-db@latest'); exec('npx tailwindcss -i ./src/input.css -o ./../app.css --minify');\""
          
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
